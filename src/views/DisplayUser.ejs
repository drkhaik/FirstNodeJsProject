<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Users</title>
</head>


<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    .btn {
        cursor: pointer;
    }
</style>

<body>
    <div class="container">
        <h2 class="mt-4 mb-3"> Display Users </h2>
        <table>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
            <% for(var i=0; i < data.length; i++) { %>
                <tr>
                    <td>
                        <%= data[i].email %>
                    </td>
                    <td>
                        <%= data[i].firstName %>
                    </td>
                    <td>
                        <%= data[i].lastName %>
                    </td>
                    <td>
                        <%= data[i].address %>
                    </td>
                    <td>
                        <%= data[i].phoneNumber %>
                    </td>
                    <td>
                        <%= data[i].gender %>
                    </td>
                    <td>
                        <%= data[i].roleId %>
                    </td>
                    <td>
                        <a href="/editUser?id=<%=data[i].id %>" class="btn mb-1 mt-3 btn-warning">Edit</a>
                        <a href="/deleteUser?id=<%=data[i].id %>" class="btn mb-1 mt-3 btn-danger">Delete</a>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</body>

</html>