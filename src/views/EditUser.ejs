<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UPDATE USER!</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-12">
                <h2>EDIT USER INFORMATION</h2>
            </div>
            <p>
                <%=userInfo %>
            </p>
            <form action="/updateUser" method="POST">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="inputEmail4" class="mb-1 mt-2">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" value="<%= userInfo.email %>"
                            name="email">
                    </div>
                    <!-- <div class="form-group col-6">
                        <label for="inputPassword4" class="mb-1 mt-2">Password</label>
                        <input type="password" class="form-control" id="inputPassword4" value="<%= userInfo.password %>"
                            name="password">
                    </div> -->
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="inputEmail4" class="mb-1 mt-2">First Name</label>
                        <input type="text" class="form-control" id="inputFirstName" value="<%= userInfo.firstName %>"
                            name="firstName">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4" class="mb-1 mt-2">Last Name</label>
                        <input type="text" class="form-control" id="inputLastName" value="<%= userInfo.lastName %>"
                            name="lastName">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress" class="mb-1 mt-2">Address</label>
                    <input type="text" class="form-control" id="inputAddress" value="<%= userInfo.address %>"
                        name="address">
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label for="inputPhoneNumber" class="mb-1 mt-2">Phone Number</label>
                        <input type="text" class="form-control" id="inputPhoneNumber"
                            value="<%= userInfo.phoneNumber %>" name="phoneNumber">
                    </div>
                    <!-- <div class="form-group col-md-4">
                        <label for="inputGender" class="mb-1 mt-2">Gender</label>
                        <select id="inputGender" class="form-control" name="gender">
                            <option value="M" selected> Male </option>
                            <option value="F"> Female </option>
                            <option value="O"> Other </option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputRole" class="mb-1 mt-2">Role</label>
                        <select id="inputRole" class="form-control" name="role">
                            <option value="R1" selected> Admin </option>
                            <option value="R2"> Doctor </option>
                            <option value="R3"> Patient </option>
                        </select>
                    </div> -->
                </div>
                <input type="text" name="id" id="" value="<%= userInfo.id %>" hidden>
                <button type="submit" class="btn btn-primary mb-1 mt-3">Update</button>
            </form>
        </div>
    </div>
</body>

</html>